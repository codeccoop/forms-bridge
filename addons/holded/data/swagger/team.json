      }
    ],
    "post": {
      "tags": ["Employees' time-tracking"],
      "summary": "Employee clock-out",
      "operationId": "employeeClockout",
      "description": "End counting employee time-tracking.\n",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "latitude": { "type": "string", "description": "Eg. -7.45556" },
